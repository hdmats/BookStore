@page
@model BookStore.Pages.CartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">\
    <!--Align headers to center-->
    <thead class="text-center">
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>SubTotal</th>
        </tr>
    </thead>

    <!--Align everything in the body to center-->
    <tbody class="text-center">
        @foreach(var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Quantity</td>
                    <td>@i.Book.Price.ToString("c")</td>
                    <td>@((i.Quantity * i.Book.Price).ToString("c"))</td>
                </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <!--Make Total: bold and all the way to the right next to the total amount-->
            <td class="fw-bold text-end"colspan="3">Total:</td>
            <!--Bold the total amount-->
            <td class="text-center fw-bold"> @Model.basket.CalculateTotal().ToString("c") </td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>